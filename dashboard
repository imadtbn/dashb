    <script>
        // تفعيل عناصر القائمة
        const menuItems = document.querySelectorAll('.menu-item');
        const pages = document.querySelectorAll('.page');
        
        menuItems.forEach(item => {
            item.addEventListener('click', function() {
                // إزالة النشاط من جميع العناصر
                menuItems.forEach(i => i.classList.remove('active'));
                
                // إضافة النشاط للعنصر الحالي
                this.classList.add('active');
                
                // إخفاء جميع الصفحات
                pages.forEach(page => page.classList.remove('active'));
                
                // إظهار الصفحة المحددة
                const pageId = this.getAttribute('data-page');
                document.getElementById(pageId).classList.add('active');
            });
        });
        
        // تحديث التاريخ الحالي
        const arabicMonths = [
            'يناير', 'فبراير', 'مارس', 'أبريل', 'مايو', 'يونيو',
            'يوليو', 'أغسطس', 'سبتمبر', 'أكتوبر', 'نوفمبر', 'ديسمبر'
        ];
        
        const arabicDays = [
            'الأحد', 'الاثنين', 'الثلاثاء', 'الأربعاء', 'الخميس', 'الجمعة', 'السبت'
        ];
        
        const today = new Date();
        const dayName = arabicDays[today.getDay()];
        const day = today.getDate();
        const month = arabicMonths[today.getMonth()];
        const year = today.getFullYear();
        
        document.getElementById('currentDate').textContent = `${dayName}، ${day} ${month} ${year}`;
        
        // إضافة تأثيرات تفاعلية
        document.querySelectorAll('.action-btn').forEach(btn => {
            btn.addEventListener('mouseenter', function() {
                this.style.transform = 'scale(1.1)';
            });
            
            btn.addEventListener('mouseleave', function() {
                this.style.transform = 'scale(1)';
            });
        });
        
        // إدارة نافذة إضافة المنتج
        const modal = document.getElementById('productModal');
        const addProductBtn = document.getElementById('addProductBtn');
        const closeModalBtn = document.getElementById('closeModalBtn');
        const cancelBtn = document.getElementById('cancelBtn');
        const saveProductBtn = document.getElementById('saveProductBtn');
        const productForm = document.getElementById('productForm');
        const productsTable = document.getElementById('productsTable');
        
        // فتح النافذة
        addProductBtn.addEventListener('click', function() {
            modal.style.display = 'flex';
            document.getElementById('productForm').reset();
        });
        
        // إغلاق النافذة
        closeModalBtn.addEventListener('click', function() {
            modal.style.display = 'none';
        });
        
        cancelBtn.addEventListener('click', function() {
            modal.style.display = 'none';
        });
        
        // إغلاق النافذة عند النقر خارجها
        window.addEventListener('click', function(event) {
            if (event.target === modal) {
                modal.style.display = 'none';
            }
        });
        
        // حفظ المنتج
        saveProductBtn.addEventListener('click', function() {
            const productName = document.getElementById('productName').value;
            const productCategory = document.getElementById('productCategory').value;
            const productPrice = document.getElementById('productPrice').value;
            const productQuantity = document.getElementById('productQuantity').value;
            const productStatus = document.getElementById('productStatus').value;
            
            if (!productName || !productCategory || !productPrice || !productQuantity) {
                Swal.fire({
                    icon: 'error',
                    title: 'خطأ',
                    text: 'يرجى ملء جميع الحقول الإلزامية',
                    confirmButtonText: 'حسناً'
                });
                return;
            }
            
            // إنشاء صف جديد في الجدول
            const newRow = productsTable.insertRow(1);
            
            // تحديد الأيقونة حسب الفئة
            let iconClass = 'fas fa-seedling';
            if (productCategory === 'الورود والزهور') iconClass = 'fas fa-rose';
            if (productCategory === 'أشجار التزيين') iconClass = 'fas fa-tree';
            if (productCategory === 'بذور وخضروات') iconClass = 'fas fa-leaf';
            if (productCategory === 'أدوات وأسمدة') iconClass = 'fas fa-tools';
            
            // تحديد لون الحالة
            let statusClass = 'completed';
            if (productStatus === 'منخفض') statusClass = 'pending';
            if (productStatus === 'غير متوفر') statusClass = 'in-progress';
            
            newRow.innerHTML = `
                <td>
                    <div class="product-image">
                        <i class="${iconClass}"></i>
                    </div>
                </td>
                <td>${productName}</td>
                <td>${productCategory}</td>
                <td>${productPrice} دج</td>
                <td>${productQuantity}</td>
                <td><span class="status ${statusClass}">${productStatus}</span></td>
                <td>
                    <div class="actions">
                        <div class="action-btn edit-btn">
                            <i class="fas fa-edit"></i>
                        </div>
                        <div class="action-btn delete-btn">
                            <i class="fas fa-trash"></i>
                        </div>
                    </div>
                </td>
            `;
            
            // إضافة أحداث لأزرار التعديل والحذف
            newRow.querySelector('.edit-btn').addEventListener('click', function() {
                Swal.fire({
                    title: 'تعديل المنتج',
                    text: 'هل تريد تعديل هذا المنتج؟',
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonText: 'نعم',
                    cancelButtonText: 'لا'
                }).then((result) => {
                    if (result.isConfirmed) {
                        modal.style.display = 'flex';
                        document.getElementById('productName').value = newRow.cells[1].textContent;
                        document.getElementById('productCategory').value = newRow.cells[2].textContent;
                        document.getElementById('productPrice').value = newRow.cells[3].textContent.replace(' دج', '');
                        document.getElementById('productQuantity').value = newRow.cells[4].textContent;
                        document.getElementById('productStatus').value = newRow.cells[5].textContent;
                        
                        // حفظ الصف للتعديل لاحقاً
                        saveProductBtn.dataset.row = newRow.rowIndex;
                    }
                });
            });
            
            newRow.querySelector('.delete-btn').addEventListener('click', function() {
                Swal.fire({
                    title: 'حذف المنتج',
                    text: 'هل أنت متأكد من حذف هذا المنتج؟',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'نعم، احذف',
                    cancelButtonText: 'إلغاء'
                }).then((result) => {
                    if (result.isConfirmed) {
                        productsTable.deleteRow(newRow.rowIndex);
                        Swal.fire(
                            'تم الحذف!',
                            'تم حذف المنتج بنجاح.',
                            'success'
                        );
                    }
                });
            });
            
            // إظهار رسالة نجاح
            Swal.fire({
                icon: 'success',
                title: 'تمت الإضافة!',
                text: 'تم إضافة المنتج بنجاح',
                confirmButtonText: 'حسناً'
            });
            
            // إغلاق النافذة
            modal.style.display = 'none';
            
            // حفظ البيانات في جوجل شيتس (سيتم تنفيذه لاحقاً)
            saveToGoogleSheets({
                name: productName,
                category: productCategory,
                price: productPrice,
                quantity: productQuantity,
                status: productStatus
            });
        });
        
        // تفعيل أزرار التعديل والحذف للمنتجات الموجودة
        document.querySelectorAll('.edit-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                const row = this.closest('tr');
                Swal.fire({
                    title: 'تعديل المنتج',
                    text: 'هل تريد تعديل هذا المنتج؟',
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonText: 'نعم',
                    cancelButtonText: 'لا'
                }).then((result) => {
                    if (result.isConfirmed) {
                        modal.style.display = 'flex';
                        document.getElementById('productName').value = row.cells[1].textContent;
                        document.getElementById('productCategory').value = row.cells[2].textContent;
                        document.getElementById('productPrice').value = row.cells[3].textContent.replace(' دج', '');
                        document.getElementById('productQuantity').value = row.cells[4].textContent;
                        document.getElementById('productStatus').value = row.cells[5].textContent;
                        
                        // حفظ الصف للتعديل لاحقاً
                        saveProductBtn.dataset.row = row.rowIndex;
                    }
                });
            });
        });
        
        document.querySelectorAll('.delete-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                const row = this.closest('tr');
                Swal.fire({
                    title: 'حذف المنتج',
                    text: 'هل أنت متأكد من حذف هذا المنتج؟',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'نعم، احذف',
                    cancelButtonText: 'إلغاء'
                }).then((result) => {
                    if (result.isConfirmed) {
                        row.remove();
                        Swal.fire(
                            'تم الحذف!',
                            'تم حذف المنتج بنجاح.',
                            'success'
                        );
                    }
                });
            });
        });
        
        // دالة لحفظ البيانات في جوجل شيتس
        function saveToGoogleSheets(product) {
            // هذا هو رابط تطبيق الويب الخاص بـ Google Apps Script
            // يجب استبداله برابط التطبيق الخاص بك بعد نشره
            const scriptURL = 'https://script.google.com/macros/s/AKfycbxYhF4K1Lp6Q7fTjvZcV8ZJ5t8f0vGgY0Ld9QlY/exec';
            
            // البيانات التي نريد إرسالها
            const data = {
                name: product.name,
                category: product.category,
                price: product.price,
                quantity: product.quantity,
                status: product.status,
                timestamp: new Date().toISOString()
            };
            
            // إرسال البيانات باستخدام Fetch API
            fetch(scriptURL, {
                method: 'POST',
                mode: 'no-cors',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data)
            })
            .then(response => {
                console.log('تم إرسال البيانات بنجاح!', response);
            })
            .catch(error => {
                console.error('حدث خطأ أثناء الإرسال:', error);
            });
        }
    </script>
</body>
</html>
